#SELINUX
        - name: Desabilitando o SeLinux
          selinux: policy=targeted state=disabled
#FIREWALLD
        - name: Desabilitando o firewalld
          systemd: name=firewalld state=stopped enabled=no
#TIMEZONE
        - name: Ajustando o timezone do sistema
          timezone: name=America/Sao_Paulo
#IDIOMA
        - name: Alterando o idioma do sistema
          command: /bin/localectl set-locale LANG=pt_BR.utf8
#TECLADO
        - name: Alterando o teclado do sistema
          command: /bin/localectl set-keymap br-abnt2

        - name: Instalando couchbase
          yum:
            name:  https://packages.couchbase.com/releases/5.0.1/couchbase-server-community-5.0.1-centos7.x86_64.rpm
            state: installed
#NTP
        - name: Instalando o NTP/ntpdate
          yum: pkg={{ item }} state=installed
          with_items:
          - ntp

        - name: Instalando o etcd
          yum: pkg={{ item }} state=installed
          with_items:
          - etcd

        - name: peando chave etcd
          shell: etcdctl --endpoints="http://192.168.15.19:2379" ls /couchbase3 2> /dev/null | head -1 | xargs etcdctl --endpoints="http://192.168.15.19:2379" get
          register: output
          ignore_errors: yes

        - name: print output
          shell: echo "{{ output.stdout }}" /root/{{ output.stdout }} && echo "{{ ansible_enp0s3.ipv4.address }}" > /{{ ansible_enp0s3.ipv4.address }}

        - name: add node
          shell: echo "add node {{ output.stdout }}" > /root/node-new
          when: output is succeeded

        - name: add nÃ³ etcd
          shell: echo "add node {{ ansible_enp0s3.ipv4.address }}" > /root/node-etcd-new
          when: output is failed

